<h1><%= @restaurant.name %></h1>

<p><%= @restaurant.address %> <%= @restaurant.city %>, <%= @restaurant.state %> <%= @restaurant.zip_code %></p>

<h4><%= @restaurant.description %></h4>

<p><%= link_to "Edit", edit_restaurant_path %> <%= link_to 'Delete', @restaurant,
            method: :delete,
            data: { confirm: 'Are you sure?' } %></p>


<h3>Reviews</h3>

  <ul>
    <% @reviews.each do |review| %>
    <li>
    <h3><%= review.rating %> (of 5) Stars</h3>
    <%= review.body %>
    </li>
    <%end%>
  </ul>

<p><%= link_to "Review #{@restaurant.name}", new_restaurant_review_path(@restaurant) %></p>

<p><%= link_to "Back", restaurants_path %></p>
